#include <Servo.h>

Servo myservo;
int pos = 0;
bool servoAttached = false;

void setup() {
  Serial.begin(9600);
  Serial.println("Send 'go' to move servo.");
}

void loop() {
  if (Serial.available() > 0) {
    String command = Serial.readStringUntil('\n');
    command.trim();

    if (command == "go") {
      if (!servoAttached) {
        myservo.attach(10); // attach only when needed
        servoAttached = true;
      }

      // move from 0 to 60
      for (pos = 0; pos <= 60; pos++) {
        myservo.write(pos);
        delay(15);
      }

      delay(500); // small pause

      // move back from 60 to 0
      for (pos = 60; pos >= 0; pos--) {
        myservo.write(pos);
        delay(15);
      }

      myservo.detach(); // detach to stop buzzing
      servoAttached = false;

      Serial.println("Servo movement complete.");
    }
  }
}
