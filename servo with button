#include <Servo.h>

Servo myServo;
const int buttonPin = 2;     // Pin connected to button
int buttonState = HIGH;      // Current button state
int lastButtonState = HIGH;  // Previous button state
bool movedTo90 = false;      // Track servo position state

void setup() {
  myServo.attach(9);
  pinMode(buttonPin, INPUT_PULLUP);  // Enable internal pull-up resistor
  myServo.write(0);                  // Start servo at 0 degrees
}

void loop() {
  buttonState = digitalRead(buttonPin);

  // Check for button press (transition from HIGH to LOW)
  if (lastButtonState == HIGH && buttonState == LOW) {
    if (!movedTo90) {
      myServo.write(90);    // Move servo to 90 degrees on button press
      movedTo90 = true;
    } else {
      myServo.write(0);     // Move servo back to 0 degrees on next press
      movedTo90 = false;
    }
  }

  lastButtonState = buttonState; // Save state for next loop
  delay(50);  // Simple debounce delay
}
